<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="form_style">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="form_style.text">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="form_style.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="form_style.edit" parent="form_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="form_style.button" parent="form_style">
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>