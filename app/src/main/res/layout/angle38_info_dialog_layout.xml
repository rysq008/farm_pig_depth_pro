<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/info_dialog_bg">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="10dp"
            android:text="缺少角度3、角度8，请补充"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"

        >

        <ImageView
        android:id="@id/image3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10.0dip"
        android:layout_weight="1.0"
        android:src="@drawable/angle03"
        android:gravity="center"
        android:paddingTop="10.0dip" />

        <ImageView
        android:id="@id/image8"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10.0dip"
        android:layout_weight="1.0"
        android:src="@drawable/angle08"
        android:gravity="center"
        android:paddingTop="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negativeAngle38Info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:visibility="gone"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/positiveAngle38Info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>
</LinearLayout>