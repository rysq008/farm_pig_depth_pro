<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd3d3d3"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <!--       <ImageView
                   android:id="@+id/insure_image0"
                   android:layout_width="0dp"
                   android:layout_height="50dp"
                   android:layout_weight="1"
                   android:paddingTop="10dp" />-->

        <ImageView
            android:id="@+id/insure_image1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/pig1"
            android:paddingTop="10dp" />


        <ImageView
            android:id="@+id/insure_image2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/pig2"
            android:gravity="center"
            android:paddingTop="10dp" />


        <ImageView
            android:id="@+id/insure_image3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/pig3"
            android:gravity="center"
            android:paddingTop="10dp" />

        <!--      <ImageView
                  android:id="@+id/insure_image4"
                  android:layout_width="0dp"
                  android:layout_height="50dp"
                  android:layout_marginLeft="20dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:paddingTop="10dp" />-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/insure_image5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp" />

        <ImageView
            android:id="@+id/insure_image6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/angle06_no"
            android:gravity="center"
            android:paddingTop="10dp" />

        <ImageView
            android:id="@+id/insure_image7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/angle07_no"
            android:gravity="center"
            android:paddingTop="10dp" />

        <ImageView
            android:id="@+id/insure_image8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/angle08_no"
            android:gravity="center"
            android:paddingTop="10dp" />

        <ImageView
            android:id="@+id/insure_image9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#00ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:minHeight="50dp"
            android:padding="10dp"
            android:text="临时号："
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/insure_number"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lipei_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cowear_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cow_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center|left"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/insure_btns"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/insure_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/preborder"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/insure_abort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="新开始"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/insure_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="补充"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/caijiRetry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="重新采集"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="下一头"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_uploadone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="本次上传"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_uploadall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="全部上传"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/insure_seeimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="回看图片"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/insure_seevideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="回看视频"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>