<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/info_dialog_bg">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_page1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请按照以下图示角度进行采集"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip">

        <!--<ImageView-->
        <!--android:id="@id/image0"-->
        <!--android:layout_width="0.0dip"-->
        <!--android:layout_height="50.0dip"-->
        <!--android:layout_weight="1.0"-->
        <!--android:gravity="center"-->
        <!--android:paddingTop="10.0dip" />-->

        <ImageView
            android:id="@id/image1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/angle01_no"
            android:gravity="center"
            android:paddingTop="10.0dip" />

        <ImageView
            android:id="@id/image2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/angle02_no"
            android:gravity="center"
            android:paddingTop="10.0dip" />

        <ImageView
            android:id="@id/image3"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/angle03_no"
            android:gravity="center"
            android:paddingTop="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip">

        <!--<ImageView-->
        <!--android:id="@id/image5"-->
        <!--android:layout_width="0.0dip"-->
        <!--android:layout_height="50.0dip"-->
        <!--android:layout_weight="1.0"-->
        <!--android:gravity="center"-->
        <!--android:paddingTop="10.0dip" />-->

        <ImageView
            android:id="@id/image6"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/angle06_no"
            android:gravity="center"
            android:paddingTop="10.0dip" />

        <ImageView
            android:id="@id/image7"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/angle07_no"
            android:gravity="center"
            android:paddingTop="10.0dip" />

        <ImageView
            android:id="@id/image8"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/angle08_no"
            android:gravity="center"
            android:paddingTop="10.0dip" />

        <!--<ImageView-->
        <!--android:id="@id/image9"-->
        <!--android:layout_width="0.0dip"-->
        <!--android:layout_height="50.0dip"-->
        <!--android:layout_marginLeft="20.0dip"-->
        <!--android:layout_weight="1.0"-->
        <!--android:gravity="center"-->
        <!--android:paddingTop="10.0dip" />-->
    </LinearLayout>

    <EditText
        android:id="@+id/page1InfoDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="请输入猪的编号"
        android:lines="1"
        android:maxLines="2"
        android:minLines="1"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negative"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="退出"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            tools:ignore="Suspicious0dp" />
        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.0"
            android:layout_marginLeft="30dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="上传"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/positive"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.0"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="开始"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>
</LinearLayout>