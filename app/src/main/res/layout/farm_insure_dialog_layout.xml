<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#ffd3d3d3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/farm_cowface"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="提示"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_cowimgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/insure_image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:background="@drawable/farm_cow_angle2no"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/insure_image2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:background="@drawable/farm_cow_angle1no"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/insure_image3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:background="@drawable/farm_cow_angle0no"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/insure_image5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"/>

        <ImageView
            android:id="@+id/insure_image6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:background="@drawable/farm_angle06_no"/>

        <ImageView
            android:id="@+id/insure_image7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:background="@drawable/farm_angle07_no"/>

        <ImageView
            android:id="@+id/insure_image8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:background="@drawable/farm_angle08_no"/>

        <ImageView
            android:id="@+id/insure_image9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:paddingTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible"
            android:text="临时号："/>
        <EditText
            android:id="@+id/insure_number"
            android:layout_width="500dp"
            android:visibility="invisible"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lipei_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/cowear_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/cow_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:lineSpacingExtra="8dp"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/insure_btns"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/insure_abort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="重新开始"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/insure_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="补充"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/caijiRetry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="重新拍摄"
            android:textSize="18sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/wancheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="完成"
            android:textSize="18sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="下一头"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_uploadone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="本次上传"
            android:textSize="18sp"
            android:visibility="gone" />


        <Button
            android:id="@+id/btn_uploadall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="全部上传"
            android:textSize="18sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/insure_seeimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="回看图片"
            android:textSize="18sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/insure_seevideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/farm_button_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="回看视频"
            android:textSize="18sp"
            android:visibility="gone" />

        <!--<Button-->
            <!--android:id="@+id/insure_cowInfo"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:background="@drawable/button_background"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:text="提交"-->
            <!--android:textSize="18sp"-->
            <!--android:visibility="gone" />-->
    </LinearLayout>

</LinearLayout>