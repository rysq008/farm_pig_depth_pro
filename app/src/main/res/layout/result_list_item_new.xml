<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#30425A"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/result_left"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/poll_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="猪舍名称"
                android:textColor="#DCDEE2" />
        </LinearLayout>

        <TextView
            android:id="@+id/poll_count"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/result_left"
            android:gravity="right"
            android:text="9999"
            android:textColor="#DCDEE2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/poll_count"
            android:text="头"
            android:textColor="#DCDEE2" />

        <TextView
            android:id="@+id/poll_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/poll_count"
            android:layout_below="@+id/poll_count"
            android:layout_marginBottom="5dp"
            android:text="yyyy-mm-dd"
            android:textColor="#DCDEE2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/poll_countHog"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/poll_detail"
            android:background="@drawable/anniu_detail"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="开始盘查"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/poll_detail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/anniu_detail"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="盘查详情"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff" />
</LinearLayout>
