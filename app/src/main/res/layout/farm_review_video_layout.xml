<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/video_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/farm_angle01"/>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_toRightOf="@id/video_icon"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/video_url"
            android:layout_toRightOf="@id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left"
            android:text="地址"
            android:textSize="16sp"
            android:textColor="@color/control_background"
            android:textStyle=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_operate"
        android:layout_toRightOf="@id/ll_info"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/farm_mybutton"
            android:clickable="true"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/video_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/farm_mybutton"
            android:clickable="true"
            android:textColor="#fff"/>
    </LinearLayout>

</RelativeLayout>