<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:layout_gravity="center_horizontal"
    tools:context="com.xiangchuang.risks.view.LoginFamerActivity">

    <RelativeLayout
        android:id="@+id/image_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_title" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linzhanghao"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/image_title"
        android:layout_marginTop="100dp"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/image_name_left"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_tel" />
        </RelativeLayout>

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="账号:" />

        <EditText
            android:id="@+id/loginfamer_userid"
            style="@style/EditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#ffff"
            android:textColor="#ffff"
            android:textSize="14sp"
            android:paddingEnd="30dp"
            android:inputType="text"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入账号"
            android:singleLine="true"
            android:maxLines="1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linmima"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/linzhanghao"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/image_pass_left"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_pass_left" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pass_tv"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="密码:" />

        <EditText
            android:id="@+id/loginfamer_pass"
            style="@style/EditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:paddingEnd="30dp"
            android:hint="请输入密码"
            android:textColorHint="#ffff"
            android:textColor="#ffff"
            android:inputType="textPassword"
            android:maxLines="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/pass_show"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/linzhanghao"
        android:layout_below="@+id/linzhanghao"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_pass" />

    <ImageView
        android:id="@+id/pass_hide"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/linzhanghao"
        android:layout_below="@+id/linzhanghao"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_pass_none"
        android:visibility="gone" />

    <Button
        android:id="@+id/loginfamer_login"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/linmima"
        android:background="@drawable/bg_login"
        android:text="登录" />

</RelativeLayout>
