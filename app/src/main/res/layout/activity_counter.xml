<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/counter_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_border_color"
    tools:context="com.xiangchuangtec.luolu.animalcounter.CounterActivity">

    <include
        android:id="@+id/add_lipei_title"
        layout="@layout/activity_title" />

    <Button
        android:id="@+id/take_picture_button"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/recognize_btn_bg"
        android:gravity="center"
        android:text="识别"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cameraOverlayLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/count_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/add_lipei_title"
        android:layout_marginLeft="20dp"
        android:text="猪舍1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_below="@+id/count_name"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/count_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:text="数量:20" />

        <Button
            android:id="@+id/count_edit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/anniu_bg_shape"
            android:text="本猪舍点数完毕" />
    </LinearLayout>


    <Button
        android:id="@+id/buttonViewPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/view_photo_btn_bg"
        android:text="查看"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cameraOverlayLayout" />

    <TextView
        android:id="@+id/no_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />


    <com.xiangchuangtec.luolu.animalcounter.view.CameraOverlayLayout
        android:id="@+id/cameraOverlayLayout"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <io.fotoapparat.view.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible"></io.fotoapparat.view.CameraView>

        <!--<TextureView-->
        <!--android:id="@+id/imageIV"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--/>-->

        <!--<com.flurgle.camerakit.CameraView-->
        <!--android:id="@+id/camera"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:adjustViewBounds="true"/>-->

        <com.xiangchuangtec.luolu.animalcounter.view.RecognitionView
            android:id="@+id/recognition_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </com.xiangchuangtec.luolu.animalcounter.view.CameraOverlayLayout>

    <ImageView
        android:id="@+id/recogn"
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/count_xunjian"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/cameraOverlayLayout"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/finnal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头"
            android:textSize="22sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/juan_list"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/cameraOverlayLayout"
        android:divider="@null"></ListView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/goon_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/recognize_btn_bg"
            android:text="重点"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/sure_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/recognize_btn_bg"
            android:gravity="center"
            android:text="确定"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
