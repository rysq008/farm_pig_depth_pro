<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:tools="http://schemas.android.com/tools"    android:background="#fff"    android:gravity="center_horizontal"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_horizontal"        android:orientation="vertical">        <TextView            android:id="@+id/dialog_tips_tv"            android:layout_width="match_parent"            android:layout_height="@dimen/dp_43"            android:background="@color/app_base_color"            android:padding="@dimen/dp_14"            android:text="提示"            android:textColor="@android:color/white"            android:textSize="@dimen/dp_14" />        <TextView            android:id="@+id/dialog_content_tv1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="@dimen/dp_20"            android:layout_marginRight="@dimen/dp_20"            android:layout_below="@+id/dialog_tips_tv"            android:layout_centerHorizontal="true"            android:layout_marginTop="@dimen/dp_65"            android:text=""            android:textColor="#333"            android:textSize="@dimen/dp_15"            tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容"/>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/dp_52"            android:layout_marginBottom="@dimen/dp_30"            android:gravity="center"            android:orientation="horizontal">            <Button                android:id="@+id/dialog_cancel_btn"                android:layout_width="@dimen/dp_123"                android:layout_height="@dimen/dp_36"                android:background="@drawable/bg_cancle_btn"                android:text="取  消"                android:textColor="#999"                android:textSize="@dimen/dp_14"/>            <Button                android:id="@+id/dialog_ok_btn"                android:layout_width="@dimen/dp_123"                android:layout_height="@dimen/dp_36"                android:layout_marginLeft="@dimen/dp_14"                android:background="@drawable/button_onclick"                android:text="重  试"                android:textColor="@android:color/white"                android:textSize="@dimen/dp_14"/>        </LinearLayout>    </LinearLayout></LinearLayout>