<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:paddingTop="10dp"
        android:background="#30425A">

        <LinearLayout
            android:id="@+id/LL_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#30425A"
            android:paddingStart="50dp"
            android:paddingEnd="50dp">

            <TextView
                android:id="@+id/left_juan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="猪圈名"
                android:textColor="#8D9195" />

            <TextView
                android:id="@+id/auto_count"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="自动识别数量"
                android:textColor="#8D9195" />

            <TextView
                android:id="@+id/right_count"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="修正后数量"
                android:textColor="#8D9195" />
        </LinearLayout>

        <ListView
            android:id="@+id/juan_list"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@+id/LL_title"
            android:background="#32445C"
            android:divider="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8D9195"
            android:paddingStart="20dp"
            android:layout_below="@+id/juan_list"/>

        <TextView
            android:id="@+id/hog_sure"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_below="@+id/juan_list"
            android:layout_marginTop="5dp"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="#30BABA" />
    </RelativeLayout>
</FrameLayout>


