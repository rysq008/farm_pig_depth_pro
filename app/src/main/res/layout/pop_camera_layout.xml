<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:gravity="center_horizontal"    android:background="@color/color_half_translucent"    android:orientation="vertical">    <Button        android:id="@+id/pop_camera_btn"        android:layout_width="match_parent"        android:layout_height="@dimen/dp_40"        android:layout_alignParentRight="true"        android:layout_alignParentBottom="true"        android:layout_marginTop="@dimen/dp_160"        android:layout_marginLeft="@dimen/dp_38"        android:layout_marginRight="@dimen/dp_38"        android:background="@drawable/button_onclick"        android:text="拍  照"        android:textColor="@android:color/white"        android:textSize="@dimen/dp_16" />    <Button        android:id="@+id/pop_photo_btn"        android:layout_width="match_parent"        android:layout_height="@dimen/dp_40"        android:layout_alignParentRight="true"        android:layout_alignParentBottom="true"        android:layout_marginTop="@dimen/dp_20"        android:layout_marginLeft="@dimen/dp_38"        android:layout_marginRight="@dimen/dp_38"        android:background="@drawable/button_onclick"        android:text="从相册选择"        android:textColor="@android:color/white"        android:textSize="@dimen/dp_16" />    <Button        android:id="@+id/pop_cancel_btn"        android:layout_width="match_parent"        android:layout_height="@dimen/dp_40"        android:layout_alignParentRight="true"        android:layout_alignParentBottom="true"        android:layout_marginTop="@dimen/dp_20"        android:layout_marginLeft="@dimen/dp_38"        android:layout_marginRight="@dimen/dp_38"        android:background="@drawable/anniu_bg_shape"        android:text="取  消"        android:textColor="@android:color/white"        android:textSize="@dimen/dp_16" /></LinearLayout>