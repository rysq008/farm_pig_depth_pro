<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/lipei_detail_title"
        layout="@layout/farm_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lipei_detail_title">

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保单号:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234567890"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参保数量:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参保金额:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000.123"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参保时间:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-06-14"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="被保险人:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京xx有限公司"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="被保险人证件号:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxx"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13333333333"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>

                <TextView
                    android:id="@+id/lipei_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市朝阳区xxxxx"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="26dp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="100dp"
                android:gravity="bottom"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/update_toubao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_blue_dark"
                        android:gravity="center"
                        android:text="更改信息"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/continue_toubao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_blue_dark"
                        android:gravity="center"
                        android:text="继续录入"
                        android:textColor="#fff" />

                </LinearLayout>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="100dp"
            android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/general_lipei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="生成理赔单"
                android:textColor="#fff" />

        </LinearLayout>

        </RelativeLayout>

        </LinearLayout>



    </ScrollView>



</LinearLayout>